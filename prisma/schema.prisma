generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model School {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  phone String
  address String
  email String @unique
  password String
  students Student[]
}

model Student {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  phone String
  address String
  email String @unique
  password String
  school School @relation(fields: [schoolId], references: [id])
  schoolId String @db.ObjectId
}